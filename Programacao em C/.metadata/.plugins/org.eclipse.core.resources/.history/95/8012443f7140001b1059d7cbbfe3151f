#include <stdio.h>
//#include "pi.h"

/* ifndef - Diretiva de compilação
 * "if not defined": procura a definição em outro arquivo incluido se a constante existe
 * se não existir, use o que está definido abaixo
 */
#ifndef PI
#define PI 3.0
#endif

int main() {

	int valor = 5;

	printf("O valor é %d\n", valor);

#ifdef PI
	printf("O valor de PI é %.5f\n", PI);
#endif

	return 0;
}
