#include <stdio.h>

int main() {

	int numero = 42;
	float nota = 7.9;
	char letra = 'd';
	double outraNota = 19.4;

	printf("A variável 'número' tem valor %d e ocupa %ud bytes em memória\n", numero, sizeof(numero));
	printf("A variável 'nota' tem valor %.2f e ocupa %ud bytes em memória\n", nota, sizeof(nota));
	printf("A variável 'letra' tem valor %c e ocupa %ud bytes em memória\n", letra, sizeof(letra));
	printf("A variável 'outraNota' tem valor %.2lf e ocupa %ud bytes em memória\n", outraNota, sizeof(outraNota));

	return 0;
}
